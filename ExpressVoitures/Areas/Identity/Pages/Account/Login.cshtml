@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    .login-container {
        max-width: 400px;
        margin: 60px auto;
        padding: 20px;
        text-align: center;
    }

    .login-title {
        font-size: 2rem;
        color: #333;
        margin-bottom: 40px;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
        box-sizing: border-box;
    }

    .buttons-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-top: 30px;
    }

    .btn {
        background-color: #C4A484;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #D9A963;
        }

    .or-text {
        color: #666;
        margin: 0 10px;
    }
</style>
    <div class="login-container">
        <h1 class="login-title">Express Voitures</h1>
    <form method="post">
        <div class="form-group">
                <label class="form-label">Adresse email</label>
            <input name="Input.Email" type="email" class="form-control" required>
            </div>

            <div class="form-group">
                <label class="form-label">Mot de passe</label>
            <input name="Input.Password" type="password" class="form-control" required>
            </div>

        <div class="buttons-container">
            <button type="submit" formaction="/Identity/Account/Login" class="btn">
                Se connecter
            </button>                
            <span class="or-text">ou</span>
            <button type="submit" formaction="/Identity/Account/Register" class="btn">
                S'inscrire
            </button>
        </div>

        </form>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
